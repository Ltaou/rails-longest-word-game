 <h1>New game</h1>
 <div class="box">
<% @letters.each do |letter| %>
<p> <%= letter %> </p>
<% end %>
</div>
<form action="/score" data-turbo="false" method="post">
  <div><label>What is the longest word you can find?</label></div>
      <div class="input-group">
        <input type="text" name="word">
        <input type="submit" value="Play" class="input-group-btn">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
</form>
